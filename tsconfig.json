{
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "node",
    "target": "esnext",
    "module":"esnext",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "strict": true,
    "sourceMap": false,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src",
    "__tests__"
  ]
}